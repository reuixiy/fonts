{
  "name": "web-font-auto-subsetting",
  "version": "1.0.0",
  "description": "Automated web font subsetting and deployment workflow",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:fonts": "pnpm run download-fonts && pnpm run subset-fonts && pnpm run generate-css && pnpm run generate-license",
    "check-versions": "tsx src/versionChecker.ts",
    "download-fonts": "tsx scripts/download-fonts.ts",
    "subset-fonts": "tsx src/fontSubset.ts",
    "generate-css": "tsx scripts/generate-css.ts",
    "generate-license": "tsx scripts/generate-license.ts",
    "clean": "./clean-cache.sh",
    "clean:build": "./clean-cache.sh --build",
    "clean:deps": "./clean-cache.sh --deps",
    "clean:git": "./clean-cache.sh --git",
    "clean:all": "./clean-cache.sh --all",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "fonts",
    "subsetting",
    "web-fonts",
    "automation",
    "github-actions"
  ],
  "author": "GitHub Copilot",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "postcss": "^8.5.6",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
