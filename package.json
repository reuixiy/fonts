{
  "name": "web-font-auto-subsetting",
  "version": "3.0.0",
  "description": "Automated web font subsetting and deployment workflow with modular TypeScript architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "pnpm run build && node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "build:fonts": "pnpm run build && node dist/index.js -- --build-only",
    "build:specific": "pnpm run build && node dist/index.js -- --fonts",
    "clean": "./clean-cache.sh",
    "clean:build": "./clean-cache.sh --build",
    "clean:deps": "./clean-cache.sh --deps",
    "clean:git": "./clean-cache.sh --git",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "fonts",
    "subsetting",
    "web-fonts",
    "automation",
    "github-actions"
  ],
  "author": "reuixiy",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.4.1",
    "fontkit": "^2.0.4",
    "fs-extra": "^11.3.0",
    "node-fetch": "^3.3.2",
    "subset-font": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/fontkit": "^2.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "@types/subset-font": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "postcss": "^8.5.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
